  <!-- Google Maps API script -->
  <script>
    let map;
    let markers = [];

    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: { lat: -34.397, lng: 150.644 },
        zoom: 12
      });

      const locationInput = document.getElementById('locationInput');
      const searchForm = document.getElementById('searchForm');

      searchForm.addEventListener('submit', function(event) {
        event.preventDefault();
        performSearch();
      });

      function performSearch() {
        const location = locationInput.value.trim();

        // Use geocoding to get coordinates for the location
        const geocoder = new google.maps.Geocoder();
        geocoder.geocode({ address: location }, function(results, status) {
          if (status === 'OK') {
            const locationLatLng = results[0].geometry.location;
            map.setCenter(locationLatLng);
            map.setZoom(12);

            // Remove previous markers
            markers.forEach(marker => marker.setMap(null));
            markers = [];

            // Place a marker for the searched location
            const marker = new google.maps.Marker({
              position: locationLatLng,
              map: map,
              title: 'Searched Location'
            });
            markers.push(marker);

            // Simulate fetching music studios near locationLatLng and add markers
            // Replace this with actual logic to fetch and display music studios
            fetchMusicStudiosNear(locationLatLng);
          } else {
            alert('Geocode was not successful for the following reason: ' + status);
          }
        });
      }

      function fetchMusicStudiosNear(locationLatLng) {
        // This is where you would implement fetching music studios near the location
        // and place markers on the map accordingly
        // Example:
        const musicStudios = [
          { name: 'Studio A', latLng: { lat: locationLatLng.lat() + 0.01, lng: locationLatLng.lng() + 0.01 } },
          { name: 'Studio B', latLng: { lat: locationLatLng.lat() - 0.01, lng: locationLatLng.lng() - 0.01 } }
        ];

        musicStudios.forEach(studio => {
          const marker = new google.maps.Marker({
            position: studio.latLng,
            map: map,
            title: studio.name
          });
          markers.push(marker);
        });
      }
    }
  </script>
