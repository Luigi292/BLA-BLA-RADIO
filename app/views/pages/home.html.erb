  <title>Bla Bla Radio</title>
  <style>
    /* General styles */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    /* Banner section with pseudo-random background */
    .banner {
      height: 800px;
      background-size: cover;
      background-position: center;
      color: white;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .banner h1 {
      font-size: 3em;
      margin-bottom: 0.5em;
    }

    .banner p {
      font-size: 1.5em;
      margin: 0;
    }

    /* Split section */
    .split-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 50px;
      background-color: #f0f0f0;
    }

    .split-section img {
      max-width: 80%; /* Ensure image does not exceed its container */
      height: auto; /* Maintain aspect ratio */
      display: block;
    }

    .split-section-text {
      max-width: calc(50% - 20px); /* Half of the container minus padding */
    }

    .split-section h1 {
      font-size: 2em;
      margin-bottom: 0.5em;
    }

    .split-section p {
      font-size: 1.2em;
    }

    /* Gallery section */
    .gallery {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-top: 50px;
      padding-bottom: 10%;
      background-color: #fff; /* Change background color as needed */
    }

    .gallery-title {
      font-size: 2em;
      margin-bottom: 5%;
      padding-top: 5%;
      text-align: center;
    }

    .gallery-items {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      max-width: 100%;
    }

    .gallery-item {
      width: 200px; /* Set a fixed width for each gallery item */
      margin: 10px;
      text-align: center;
    }

    .gallery-item img {
      max-width: 80%; /* Ensures the image does not exceed its natural size */
      height: auto; /* Allows the image to adjust its height proportionally */
      object-fit: cover; /* Ensures the image covers the entire container */
    }

    /* Footer section */
    .footer {
      background-color: #333;
      color: white;
      text-align: center;
      margin-top: 5%;
      padding-top: 2%;
      padding-bottom: 2%;

      bottom: 0;
      width: 100%;
    }

  </style>
</head>
